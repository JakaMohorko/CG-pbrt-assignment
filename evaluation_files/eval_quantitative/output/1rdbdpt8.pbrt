Sampler "random" "integer pixelsamples" [8]
Integrator "bdpt" "integer maxdepth" [5]
Film "image" "string filename" "1rdbdpt8.exr"
 "integer xresolution" [400] "integer yresolution" [400]
LookAt 3 4 3 # eye
	.5 .5 0 # look at point
	0 0 1 # up vector
Camera "perspective" "float fov" 45


WorldBegin


AttributeBegin
	AreaLightSource "diffuse" "rgb L" [ 500.0 500.0 500.0 ]
	Translate 3 0 5
	Shape "sphere" "float radius" [.30]
AttributeEnd

AttributeBegin
	Material "anisotropicPhong" "rgb Rd" [ 0.03 0.03 1 ] "rgb Rs" [.5 .5 .5 ] "float nv" [10000.0] "float nu" [10000.0] "float cosineweight" [0]
	Translate 0 0 0
	Shape "sphere" "float radius" 0.5
AttributeEnd

AttributeBegin
	Material "glass"
	Translate 0 0 0
	Shape "sphere" "float radius" 1.5
AttributeEnd

AttributeBegin

	Material "matte" "color Kd" [.8 .8 .8]
	Translate 0 0 -1
	Shape "trianglemesh"
	"integer indices " [0 1 2 0 2 3]
	"point P" [ -20 -20 0 20 -20 0 20 20 0 -20 20 0 ]
	"float st" [ 0 0 1 0 1 1 0 1 ]
AttributeEnd

WorldEnd